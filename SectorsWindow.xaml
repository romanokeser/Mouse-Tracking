<Window x:Class="MouseTracking.SectorsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MouseTracking"
        WindowStartupLocation="CenterScreen"
        WindowStyle="ToolWindow" 
        WindowState="Normal"
        ResizeMode="NoResize"
        mc:Ignorable="d"
        Title="SectorsWindow" Height="1000" Width="1840">

    <Canvas x:Name="canvas" Background="White" Margin="0,10,0,0" Canvas.ZIndex="0">
        <Button Content="Show mouse movement" Click="Button_Click" Canvas.ZIndex="1" Height="30" Canvas.Left="18" Canvas.Top="10" Width="142"/>
        <Button Content="Show mouse clicks" Click="Button_Click" Canvas.ZIndex="1" HorizontalAlignment="Center" Canvas.Left="18" Canvas.Top="40" VerticalAlignment="Center" Height="30" Width="142"/>
    </Canvas>
</Window>
